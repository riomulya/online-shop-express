<%- include('../includes/head.ejs',{pageTitle:'Sign Up'}) %>
    </head>

    <body>
        <%- include('../includes/header.ejs') %>
            <main class="mt-7 mb-7 flex w-1/3 text-center h-auto mx-auto bg-slate-200 p-5 flex-col rounded-2xl">
                <h1 class="mb-7 font-semibold text-xl text-slate-800">Create New Account</h1>
                <form action="/signup" method="POST">
                    <p class="inline">
                        <label class="block" for="email">E-Mail</label>
                        <input class="input-form" type="email" id="email" name="email" required>
                    </p>
                    <p>
                        <label class="block" for="confirm-email">Confirm E-Mail</label>
                        <input class="input-form" type="email" id="confirm-email" name="confirm-email" required>
                    </p>
                    <p>
                        <label class="block" for="password">Password</label>
                        <input class="input-form" type="password" id="password" name="password" minlength="6" required>
                    </p>
                    <div class="inline-flex items-center justify-center w-full">
                        <hr class="w-64 h-px my-8 border-0 bg-gray-700">
                        <span class="absolute px-3 font-medium  -translate-x-1/2  left-1/2 text-black bg-slate-200">USER
                            ID</span>
                    </div>
                    <p>
                        <label class="block" for="fullname" class="">Fullname</label>
                        <input class="input-form" type="text" id="fullname" name="fullname" required>
                    </p>
                    <p>
                        <label class="block" for="street">Street</label>
                        <input class="input-form" type="text" id="street" name="street" required>
                    </p>
                    <p>
                        <label class="block" for="postal">Postal Code</label>
                        <input class="input-form" type="text" id="postal" name="postal" minlength="5" maxlength="5"
                            required>
                    </p>
                    <p>
                        <label class="block" for="city" class="">City</label>
                        <input class="input-form" type="text" id="city" name="city" required>
                    </p>
                    <button
                        class="m-7 rounded-3xl w-40 bg-gray-400 hover:bg-gray-200 hover:outline hover:outline-2 p-2 font-medium ">Create
                        Account</button>
                    <p id="switchform" class="mb-3"><a
                            class="rounded-3xl font-medium bg-gray-300 hover:bg-gray-200 hover:outline hover:outline-2 p-3"
                            href="/login">Login
                            Instead</a></p>
                </form>
            </main>


            <%- include("../includes/footer.ejs") %>